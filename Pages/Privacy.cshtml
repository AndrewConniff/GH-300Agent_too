@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}

<style>
  .emp-table { width: 100%; border-collapse: collapse; margin-top: 20px; }
  .emp-table th { background:#2b6cb0; color:white; padding:10px; text-align:left; }
  .emp-table td { padding:10px; border-bottom:1px solid #e2e8f0; }
  .emp-table tr:nth-child(even) { background:#f7fafc; }
  .emp-container { max-width:1000px; margin:20px auto; font-family: Arial, Helvetica, sans-serif; }
  .emp-title { font-size:24px; font-weight:600; color:#1a202c; }
</style>

<div class="emp-container">
    <h1 class="emp-title">Employee Directory</h1>

    @if (Model.Employees != null && Model.Employees.Any())
    {
        <table class="emp-table">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Hiring Date</th>
                    <th>Department</th>
                    <th>Job Title</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var e in Model.Employees)
            {
                <tr>
                    <td>@e.FirstName</td>
                    <td>@e.LastName</td>
                    <td>@e.HiringDate</td>
                    <td>@e.Department</td>
                    <td>@e.JobTitle</td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No employee data available.</p>
    }
</div>
